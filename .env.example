# Solana RPC URL (use Helius, QuickNode, or other RPC provider for better performance)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# API server port
PORT=3000

# ─── x402 Payment Configuration ────────────────────────────────────
# Enable/disable x402 payments (set to 'true' to enable)
X402_ENABLED=false

# Varuna payment receiving wallet (Solana address)
VARUNA_PAYMENT_WALLET=your-solana-wallet-address

# Network: 'mainnet' or 'devnet'
X402_NETWORK=devnet

# PayAI Facilitator URL (no API key required)
# Free tier: 100,000 settlements/month, 4 req/sec
X402_FACILITATOR_URL=https://facilitator.payai.network
